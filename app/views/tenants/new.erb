<h1>New Tenant Form: </h1>

<form method="post" action="/tenants">
    <label>Name:</label><input type='text' name='name'/>
    <select name='apartment_id'>
        <option disabled selected>Choose an apartment</option>
        <% @apartments.each do |apartment| %>
        <option value='<%= apartment.id %>'><%= apartment.address %></option>
        <% end %>
    </select>
    <input type='submit' value='Add tenant'/>

</form>